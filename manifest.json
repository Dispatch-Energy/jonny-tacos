{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "{{APP_ID}}",
    "packageName": "com.dispatchenergy.itsupportbot",
    "developer": {
      "name": "Dispatch Energy",
      "websiteUrl": "https://www.dispatchenergy.com/",
      "privacyUrl": "https://www.dispatchenergy.com/privacy",
      "termsOfUseUrl": "https://www.dispatchenergy.com/terms"
    },
    "name": {
      "short": "IT Support",
      "full": "IT Support Assistant Bot"
    },
    "description": {
      "short": "AI-powered IT help desk assistant",
      "full": "An intelligent IT support bot that helps resolve common technical issues, creates support tickets, and provides instant solutions for password resets, VPN problems, Teams issues, and more."
    },
    "icons": {
      "color": "color.png",
      "outline": "outline.png"
    },
    "accentColor": "#0078D4",
    "bots": [
      {
        "botId": "{{BOT_ID}}",
        "scopes": [
          "personal",
          "team",
          "groupchat"
        ],
        "supportsFiles": false,
        "isNotificationOnly": false,
        "supportsCalling": false,
        "supportsVideo": false,
        "commandLists": [
          {
            "scopes": ["personal", "team", "groupchat"],
            "commands": [
              {
                "title": "help",
                "description": "Show available commands and how to use the bot"
              },
              {
                "title": "ticket",
                "description": "Create a new IT support ticket"
              },
              {
                "title": "status",
                "description": "Check status of your support tickets"
              },
              {
                "title": "stats",
                "description": "View IT support statistics (admin)"
              }
            ]
          }
        ]
      }
    ],
    "permissions": [
      "identity",
      "messageTeamMembers"
    ],
    "validDomains": []
  }